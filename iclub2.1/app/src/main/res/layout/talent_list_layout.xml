<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/paren_layout_match_horgrivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#20000000"
    android:paddingLeft="6dp"
    android:paddingRight="10dp">

    <!--<com.example.administrator.iclub21.bean.talent.CircleImageView-->
        <!--xmlns:myxmlns="http://schemas.android.com/apk/res/com.example.administrator.iclub21"-->
        <!--android:id="@+id/talent_list_image"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="80dp"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--myxmlns:border_width="1dp"-->
        <!--myxmlns:border_color="#00ffffff"-->
        <!--android:layout_margin="14dp"/>-->
    <com.example.administrator.iclub21.bean.talent.RoundAngleImageView
        xmlns:app="http://schemas.android.com/apk/res/com.sina.weibo.sdk.demo"
        android:id="@+id/talent_list_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="14dp"
        app:roundWidth = "35dp"
        app:roundHeight = "35dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

      <!--<ImageView
          android:id="@+id/talent_list_image"
          android:src="@mipmap/ic_launcher"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_margin="14dp" />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
           >
            <TextView
                android:id="@+id/talent_name"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize15"
                android:text="name"
                style="@style/textview_paren_width"
                />
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/talent_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
       <TextView
           android:id="@+id/talent_age_list"
           android:textColor="#2f967a"
           android:textSize="@dimen/textSize12"
           android:text="age"
           android:padding="2dp"
           android:background="@mipmap/age_icon"
           android:layout_marginTop="5dp"
           android:layout_width="50dp"
           android:gravity="center"
           android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        style="@style/paren_layout_match_vertirivity"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/talent_hot"
                android:textColor="#9a4274"
                android:layout_marginRight="2dp"
                android:src="@mipmap/talent_hot"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"/>
             <TextView
                 android:id="@+id/talent_city"
                 android:textColor="#9a4274"
                 android:textSize="@dimen/textSize13"
                 android:text="city"
                 style="@style/textview_paren_width"/>
        </LinearLayout>
        <TextView
            android:id="@+id/talent_job"
            android:textColor="#9a4274"
            android:textSize="@dimen/textSize14"
            android:text="山东分公司规范施工方式反对"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/textview_paren_width"
             />

    </LinearLayout>

</LinearLayout>