<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/iculd_beijin_icon"
    tools:context="com.example.administrator.iclub21.util.ResumeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/resume_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/resume_radio_rg" />
            <RadioGroup
                android:id="@+id/resume_radio_rg"
                android:background="#242424"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <RadioButton
                    android:id="@+id/resume_radio_bt"
                    android:text="微简历"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize12"
                    android:checked="true"
                    android:textColor="@color/home_color_seletor"
                    android:drawableTop="@drawable/resume_radio_button_selector"
                    style="@style/paren_radiogrud"
                    />
                <RadioButton
                    android:id="@+id/nvite_radio_bt"
                    android:text="邀约详情"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize12"
                    android:textColor="@color/home_color_seletor"
                    android:drawableTop="@drawable/invite_radio_button_selector"
                    style="@style/paren_radiogrud"
                    />
                <RadioButton
                    android:id="@+id/reputation_radio_bt"
                    android:text="信誉值"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize12"
                    android:textColor="@color/home_color_seletor"
                    android:drawableTop="@drawable/reputation_radio_button_selector"
                    style="@style/paren_radiogrud"
                    />
                <RadioButton
                    android:id="@+id/message_radio_bt"
                    android:text="消息通知"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSize12"
                    android:textColor="@color/home_color_seletor"
                    android:drawableTop="@drawable/message_radio_button_selector"
                    style="@style/paren_radiogrud"
                    />


            </RadioGroup>











</RelativeLayout>
