<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="190dp"
    android:id="@+id/artist_condition_select_ll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="娱乐招聘"
        android:textColor="#00DEDDE2"
        android:textSize="24sp"
        android:padding="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="48dp">
        <Button
            android:id="@+id/artist_area_tv"
            android:gravity="center"
            android:padding="2dp"
            android:layout_weight="1"
            android:background="#00660099"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/artist_sex_tv"
            android:gravity="center"
            android:padding="2dp"
            android:layout_weight="1"
            android:background="#00660099"
            android:textColor="@color/white"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/artist_tupe_tv"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="2dp"
            android:layout_weight="1"
            android:background="#00660099"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/select_area_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/artist_condition_s">
            <Button
                android:id="@+id/select_hinterland_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中国大陆"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2B2B2B"/>
            <Button
                android:id="@+id/select_macao_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="港澳台"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2B2B2B"/>
            <Button
                android:id="@+id/select_rest_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_sex_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/artist_condition_s">

            <Button
                android:id="@+id/select_man_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="男"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2B2B2B"/>

            <Button
                android:id="@+id/select_girl_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_tupe_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/artist_condition_s">
            <Button
                android:id="@+id/select_singer_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歌手"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2B2B2B"/>

            <Button
                android:id="@+id/select_actor_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="演员"
                android:background="@drawable/artist_condition_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
  <!--  <TextView
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:background="#000000"/>-->

</LinearLayout>
