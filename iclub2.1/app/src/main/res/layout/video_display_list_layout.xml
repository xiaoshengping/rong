<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/video_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="vertical"
        android:background="#00ffffff"
        android:layout_marginTop="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="#20ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video_display"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="视频展示"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#b0c5ec"/>
            <TextView
                android:id="@+id/movie_direction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:text="@string/up_arrow"
                android:textSize="@dimen/up_down_arrow_height"
                android:textColor="#b0c5ec"
                android:scaleX="@dimen/arrow_stretch"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#08ffffff"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/video_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:background="#10000000">

        <ImageButton
            android:id="@+id/btn_play_ib"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@mipmap/btn_play"
            android:background="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</LinearLayout>