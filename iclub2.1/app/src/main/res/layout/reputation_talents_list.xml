<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#20ffffff">

    <TextView
        android:id="@+id/resume_neme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌手"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#8E9FBD"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/comment_body_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="阿达来开发建设的房间大家，拉到就放到。阿打算发发发斯蒂芬"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="6dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingLeft="25dp"
        android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/comment_neme_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="广州文化娱乐传媒有限公司adfadsfasdfasdfasdfasdfasdf"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="0dp"
                android:textSize="14sp"
                android:textColor="#8E9FBD"/>
            <TextView
                android:id="@+id/comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_neme_tv"
                android:layout_alignLeft="@+id/comment_neme_tv"
                android:text="今天12：30"
                android:textSize="14sp"
                android:textColor="#8E9FBD"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#40ffffff"
        android:layout_marginLeft="25dp"/>

</LinearLayout>
