<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/artist_person_picture"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/artist_person_name"
        android:textSize="@dimen/artist_name_h"
        android:text="阿道夫"
        android:background="@mipmap/artist_name_icon"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:textColor="@color/ic_white"
        android:layout_marginBottom="42dp"
        android:layout_alignBottom="@+id/artist_person_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>