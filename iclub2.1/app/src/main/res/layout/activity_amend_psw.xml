<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/iculd_beijin_icon"
    tools:context="com.example.administrator.iclub21.util.RegisterActivity">
    <include layout="@layout/register_tailt_layout"/>

    <ImageView
        style="@style/paren_layout_width"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="150dp"
        android:src="@mipmap/logo" />
    <EditText
        android:id="@+id/former_psw_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:drawablePadding="5dp"
        android:hint="旧密码"
        android:phoneNumber="true"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/new_psw_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:drawablePadding="5dp"
        android:hint="新密码"
        android:password="true"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/reset_psw_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:drawablePadding="5dp"
        android:hint="重复密码"
        android:password="true"
        android:textColorHint="@color/white" />
</LinearLayout>

