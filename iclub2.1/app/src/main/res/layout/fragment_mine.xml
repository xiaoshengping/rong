<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/iculd_beijin_icon"
android:orientation="vertical"
    tools:context="com.example.administrator.iclub.fragment.MineFragment">
    <include
       android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/mine_tailt_layout"></include>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="165dp">
        <ImageView
            android:src="@mipmap/mine_head_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
            android:id="@+id/imageView" />
          <ImageView
              android:id="@+id/mine_head_iv"
              android:layout_marginTop="25dp"
              android:src="@mipmap/mine_head_default"
              android:layout_centerHorizontal="true"
              android:layout_width="100dp"
              android:layout_height="100dp" />

          <TextView

              style="@style/paren_layout_width"
              android:text="点击登陆"
              android:textSize="@dimen/textSize14"
              android:textColor="@color/white"
              android:id="@+id/mine_name"
              android:layout_marginTop="12dp"
              android:layout_below="@+id/imageView"
              android:layout_centerHorizontal="true" />

      </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_role_layout"
        android:layout_marginTop="5dp"
        android:background="#3Affffff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/role_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b0c5ec"
            android:text="角色用户"
            android:layout_marginLeft="26dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#3Affffff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/announcement_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b0c5ec"
             android:id="@+id/information_tv"
            android:text="公告信息"
            android:layout_marginLeft="23dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#3Affffff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/modification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b0c5ec"
            android:id="@+id/amend_psw_tv"
            android:text="修改密码"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/share_sdk_layout"
        android:layout_marginTop="5dp"
        android:background="#3Affffff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b0c5ec"
            android:text="分享好友"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#3Affffff"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b0c5ec"
             android:id="@+id/about_tv"
            android:text="关于iClub"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_cancel"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#3Affffff"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/logout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/whiteOne"
            android:text="注销账号"
            android:layout_marginLeft="27dp"
            android:textSize="@dimen/textSize15"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>




    </LinearLayout>

