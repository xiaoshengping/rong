<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/iculd_beijin_icon"
    tools:context="com.example.administrator.iclub21.util.AmendAboutActivity">
    <include layout="@layout/register_tailt_layout"/>
    <LinearLayout
        android:id="@+id/about_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageView
        android:layout_marginTop="30dp"
        style="@style/paren_layout_width"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="150dp"
        android:src="@mipmap/logo" />
    <TextView
        android:text="iClub2.2.0"
        android:textSize="@dimen/textSize13"
        android:textColor="@color/white"
        style="@style/paren_layout_width"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="153dp"
        />
    <LinearLayout
        android:background="#3Affffff"
        android:gravity="center"
        android:id="@+id/about_function_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/about_function_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="功能介绍"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/whiteOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="#3Affffff"
        android:gravity="center"
        android:id="@+id/about_idea_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/about_idea_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="意见反馈"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/whiteOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>


</LinearLayout>
