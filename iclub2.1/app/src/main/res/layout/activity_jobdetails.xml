<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/iculd_beijin_icon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位详情"
                android:textColor="#00DEDDE2"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_centerInParent="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#00000000">
                <TextView
                    android:id="@+id/position_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="演出乐手"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:textColor="#FCFCFD"/>
                <TextView
                    android:id="@+id/puttime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间：2014-12-10"
                    android:layout_below="@+id/position_tv"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:textColor="#c979a8"/>
                <TextView
                    android:id="@+id/viewCount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_count_shape"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="浏览量:124"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:textColor="#c979a8"
                    android:layout_alignBottom="@+id/puttime_tv"/>

                <!--<RatingBar-->
                    <!--style="?android:attr/ratingBarStyleSmall"-->
                    <!-- -->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:numStars="5"-->
                    <!--android:rating="3"-->
                    <!--android:isIndicator="true"-->
                    <!--/>-->
                <include
                    layout="@layout/ratingbar_star_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/viewCount_tv"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#20ffffff"
                android:visibility="visible">
                <TextView
                    android:id="@+id/workpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="薪    金:"
                    android:textSize="15sp"
                    android:textColor="#b0c5ec"
                    android:gravity="center"
                    android:layout_alignLeft="@+id/companyName"
                    android:layout_alignRight="@+id/companyName"/>
                <TextView
                    android:id="@+id/workpay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/workpay"
                    android:layout_marginLeft="8dp"
                    android:text="3000元"
                    android:textSize="15sp"
                    android:textColor="#fd7f03"/>
                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称:"
                    android:textSize="15sp"
                    android:layout_below="@+id/workpay_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/companyName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/companyName"
                    android:layout_alignBottom="@+id/companyName"
                    android:layout_marginLeft="8dp"
                    android:text="广州天河娱乐文化传播管理有限公司"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>
                <TextView
                    android:id="@+id/workplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作地点:"
                    android:textSize="15sp"
                    android:layout_below="@+id/companyName_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/workplace_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/workplace"
                    android:layout_alignBottom="@+id/workplace"
                    android:layout_marginLeft="8dp"
                    android:text="广州-天河"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>

                <TextView
                    android:id="@+id/recruitingNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作时间:"
                    android:textSize="15sp"
                    android:layout_below="@+id/workplace_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/recruitingNumbers_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/recruitingNumbers"
                    android:layout_alignBottom="@+id/recruitingNumbers"
                    android:layout_marginLeft="8dp"
                    android:text="2人"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#20ffffff"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/jobRequirements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经验要求"
                    android:textSize="15sp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/jobRequirements_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobRequirements"
                    android:layout_marginTop="10dp"
                    android:text="发地方经济带上来看附件案件 阿里看的是减肥减肥了空间放辣椒 离开见附件理解爱疯了 啊解放路口叫了声"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#D2C8DC"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#20ffffff"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/jobInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经验要求"
                    android:textSize="15sp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/jobInfo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobInfo"
                    android:layout_marginTop="10dp"
                    android:text="发地方经济带上来看附件案件 阿里看的是减肥减肥了空间放辣椒 离开见附件理解爱疯了 啊解放路口叫了声"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#D2C8DC"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#20ffffff"
                android:visibility="visible"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话:"
                    android:textSize="15sp"
                    android:textColor="#b0c5ec"
                    android:layout_alignRight="@+id/email"/>
                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/phone"
                    android:layout_marginLeft="8dp"
                    android:text="1345886456"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="15sp"
                    android:layout_below="@+id/phone_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"/>
                <TextView
                    android:id="@+id/email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/email"
                    android:layout_alignBottom="@+id/email"
                    android:layout_marginLeft="8dp"
                    android:text="56898452"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>
                <TextView
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="官网:"
                    android:textSize="15sp"
                    android:layout_below="@+id/email_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"
                    android:layout_alignRight="@+id/email"/>
                <TextView
                    android:id="@+id/web_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/web"
                    android:layout_alignBottom="@+id/web"
                    android:layout_marginLeft="8dp"
                    android:text="www.app.com"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textSize="15sp"
                    android:layout_below="@+id/web_tv"
                    android:layout_marginTop="12dp"
                    android:textColor="#b0c5ec"
                    android:layout_alignRight="@+id/email"/>
                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/address"
                    android:layout_alignBottom="@+id/address"
                    android:layout_marginLeft="8dp"
                    android:text="广州越秀区中山四路148号"
                    android:textSize="15sp"
                    android:textColor="#D2C8DC"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000">

            <TextView
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位详情"
                android:textColor="#DEDDE2"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="投递"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#DEDDE2"
                android:onClick="send"
                android:background="#00ffffff"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="ㄑ"
                android:textSize="26sp"
                android:layout_marginLeft="0dp"
                android:textColor="#DEDDE2"
                android:onClick="back"
                android:background="#00ffffff"/>



        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
